{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "examples": [
    {
      "$comment": "Set to large load.",
      "updateModeSettings": {
        "load_mode": "large_load"
      }
    }
  ],
  "description": "Update mode settings.",
  "type": "object",
  "properties": {
    "updateModeSettings": {
      "description": "Key/value pair with the mode <code>name</code> of the device as the key, and the new <code>setting_name</code> as the value.",
      "type": "object",
      "minProperties": 1,
      "maxProperties": 1,
      "additionalProperties": {
        "description": "New <code>setting_name</code>.",
        "type": "string"
      }
    }
  },
  "required": [
    "updateModeSettings"
  ],
  "additionalProperties": false
}
