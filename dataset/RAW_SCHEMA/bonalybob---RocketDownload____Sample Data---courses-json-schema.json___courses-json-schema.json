{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": " ",
    "type": "object",
    "properties": {
        "name": {
            "$id": "/properties/name",
            "type": "string",
            "title": "Name",
            "description": "Name of the Course",
            "default": "",
            "examples": [
                "Long",
                "Short",
                "Blue",
                "White"
            ]
        },
        "distance": {
            "$id": "/properties/distance",
            "type": "number",
            "title": "Distance",
            "description": "Distance of Course in Kilometres",
            "default": 0,
            "examples": [
                5,
                4.5,
                1.23
            ]
        },
        "climb": {
            "$id": "/properties/climb",
            "type": "integer",
            "title": "Climb",
            "description": "Amount of climb on the course in metres",
            "default": 0,
            "examples": [
                100,
                5,
                275
            ]
        },
        "controls": {
            "$id": "/properties/controls",
            "type": "array",
            "items": {
                "$id": "/properties/controls/items",
                "type": "integer",
                "title": "Control Numbers",
                "description": "The control codes in order for the course",
                "default": 0,
                "examples": [
                    101,
                    202,
                    175,
                    243
                ],
                "minimum": 0,
                "maximum": 255
            }
        }
    },
    "required": [
        "name"
    ]
}