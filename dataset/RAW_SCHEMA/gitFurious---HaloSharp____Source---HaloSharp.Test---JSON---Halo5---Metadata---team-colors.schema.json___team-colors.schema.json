{
  "definitions": {
    "TeamColor": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": [ "string", "null" ]
        },
        "color": {
          "type": "string"
        },
        "iconUrl": {
          "type": "string"
        },
        "id": {
          /*
           * HACK: API returns a string but it's really an int. 
           * HaloSharp's model uses an int, the JSON reponse uses a string.
           */
          "type": [ "string", "integer" ]
        },
        "contentId": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "description",
        "color",
        "iconUrl",
        "id",
        "contentId"
      ]
    }
  },

  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "array",
  "items": {
    "$ref": "#/definitions/TeamColor"
  }
}