{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "examples": [
    {
      "$comment": "What is the current effect on my device?",
      "activeLightEffect": "colorLoop"
    }
  ],
  "type": "object",
  "properties": {
    "activeLightEffect": {
      "description": "Currently active light effect. One of <code>supportedEffects</code>.",
      "type": "string",
      "enum": [
        "colorLoop",
        "sleep",
        "wake"
      ]
    }
  },
  "required": [
    "activeLightEffect"
  ]
}
